<h1>Listing speakers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Link</th>
    <th>Speaker type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @speakers.each do |speaker| %>
  <tr>
    <td><%= speaker.name %></td>
    <td><%= speaker.bio %></td>
    <td><%= speaker.link %></td>
    <td><%= speaker.speaker_type %></td>
    <td><%= link_to 'Show', speaker %></td>
    <td><%= link_to 'Edit', edit_speaker_path(speaker) %></td>
    <td><%= button_to 'Destroy', speaker, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button radius" %></td>
  </tr>
<% end %>
</table>

