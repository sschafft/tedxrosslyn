<%= form_for @application, :validate => true  do |f| %>
  <% if @application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h2>

      <ul>
      <% @application.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :question1, "What are you currently spending most of your time thinking about?" %><br />
    <%= f.text_area :question1 %>
  </div>
  <div class="field">
    <%= f.label :question2, "What's your biggest achievement?" %><br />
    <%= f.text_field :question2 %>
  </div>
  <div class="field">
    <%= f.label :question3, "How can you help the TEDxRosslyn Community?" %><br />
    <%= f.text_area :question3 %>
  </div>
  <div class="field">
    <%= f.label :question4, "Additional Comments?" %><br />
    <%= f.text_area :question4 %>
  </div>
  <div class="field">
    <%= f.label :question5, "Lastly, and most importantly: what do you think will be the most popular ice cream flavor in the future?" %><br />
    <%= f.text_area :question5 %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br />
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :age, "Age" %><br />
    <%= f.text_field :age %>
  </div>
  <div>
    <%= f.submit 'Apply' , :class => "button radius" %>
    <%= link_to 'Back', :back %>
  </div>
<% end %>
